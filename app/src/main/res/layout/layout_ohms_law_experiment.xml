<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/image_view_voltmeter"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/relativeLayout"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="35dp" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="56dp">


        <TextView
            android:id="@+id/tv_voltage"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"

            android:text="V = 0v" />

        <TextView
            android:id="@+id/tv_resistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_voltage"
            android:gravity="center"
            android:text="R = 1K" />

        <TextView
            android:id="@+id/tv_current"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_resistance"
            android:layout_marginTop="5dp"

            android:gravity="center"
            android:text="I = 0A"
            android:textStyle="bold" />


    </RelativeLayout>







    <com.nexdev.enyason.ohmslawexperiment.CanvasOhmsLaw
        android:id="@+id/canvas_ohms_law"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>
